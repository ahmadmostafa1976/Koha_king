[% BLOCK list_permissions %]
 <li>
 <label for="allow_changes_from">السماح بالتغييرات على المحتويات من: </label>
 <select name="allow_changes_from" id="allow_changes_from">

 [% IF shelf.allow_change_from_owner %]<option value="0">لا أحد</option>[% ELSE %]<option value="0" selected="selected">لا أحد</option>[% END %]

 [% IF shelf.allow_change_from_owner && (( !shelf.is_public && !shelf.is_shared ) || !shelf.allow_change_from_others ) %]
 <option value="1" selected="selected">المالك فقط</option>
 [% ELSE %]
 <option value="1">المالك فقط</option>
 [% END %]

 [% IF permitteduser == 1 %][% IF shelf.allow_change_from_permitted_staff %]<option value="4" selected="selected">الموظفين المصرح لهم فقط</option>[% ELSE %]<option value="4">الموظفين المصرح لهم فقط</option>[% END %][% END %]

 [% IF staffuser == 1 %][% IF shelf.allow_change_from_staff %]<option value="3" selected="selected">الموظفين فقط</option>[% ELSE %]<option value="3">الموظفين فقط</option>[% END %][% END %]

 [% IF shelf.allow_change_from_others %]<option value="2" selected="selected">أي شخص برؤية هذه القائمة</option>[% ELSE %]<option value="2">أي شخص برؤية هذه القائمة</option>[% END %]


 </select>
 &emsp; <span id="permitted_staff_remark" style="display:none;color:red;">لا يوجد لصلاحية "الموظفين المصرح لهم فقط" أي تأثير فعلي حين تكون هذه القائمة خاصة.</span>
 &emsp; <span id="staff_remark" style="display:none;color:red;">لا يوجد لصلاحية "الموظفين فقط" أي تأثير فعلي حين تكون هذه القائمة خاصة.</span>
 &emsp; <span id="anyone_remark" style="display:none;color:red;">لا يوجد لصلاحية "أي شخص" أي تأثير فعلي حين تكون هذه القائمة خاصة.</span>
 </li>
[% END %]

